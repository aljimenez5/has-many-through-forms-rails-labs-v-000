<h1><%= @post.title %></h1>
<h2><%= @post.content %> </h2>
<ul>
<% @post.categories.each do |cat| %>
  <li><%= cat.name %></li>
<% end %>
</ul>

<% @post.comments.each do |comment| %>
<p>
  <%= comment.content %>
</p>
<% end %>

<ul>
<% @post.users_commented.uniq.each do |user| %>
  <li><%= link_to user.username, user %></li>
<% end %>
</ul>

<%= form_for @post do |f| %>

  <%= f.fields_for :comments, @post.comments.build do |comment|%>
    <%= comment.collection_select :user_id, User.all, :id, :username %>
    <br>
    <%= comment.text_field :user %>
    <br>
    <%= comment.label :content %>
    <br>
    <%= comment.text_area :content %>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
